# API Configuration
HASH_API_URL=https://api.hashify.net/hash/md4/hex?value=
HASH_API_TIMEOUT=5
HASH_API_MAX_RETRIES=3
HASH_API_BACKOFF_FACTOR=2

# Path Configuration
INPUT_PATH=./data/input
OUTPUT_PATH=./data/output

# Schema Configuration
SCHEMA_VALIDATION_MODE=STRICT
SCHEMA_EVOLUTION_ENABLED=False

# File Format Configuration
INPUT_FILE_FORMAT=csv
OUTPUT_FILE_FORMAT=csv
CSV_DELIMITER=,
CSV_QUOTE_CHAR='"'
CSV_ESCAPE_CHAR='"'
CSV_HEADER=true
CSV_MODE=PERMISSIVE
CSV_MULTILINE=true

# Spark Configuration
SPARK_MASTER=local[*]
SPARK_APP_NAME=DataTransformer
ENABLE_CACHING=True

# Logging
LOG_LEVEL=INFO
